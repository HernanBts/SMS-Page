<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Write your message..." autofocus>
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+5411457385cd   " autofocus>
            </div>
            <button class="btn btn-success btn-block">
                Send
            </button>
        </form>
    </div>
    <div class="col-md-8">
        {{#if messages}}
        <li class="list-group" style="height: 70vh; overflow-y: auto;" id="messages">
            {{#each messages}}
            <div class="list-group-item list-group-item-action list-group-item-default">
                <p>{{Body}}</p>
                <span>{{To}}</span>
                <span>{{From}}</span>
                <span> -> {{timeago createdAt}}</span>
            </div>
            {{/each}}
        </li>
        {{else}}
        <p>No Messages.</p>
        {{/if}}
    </div>
</div>